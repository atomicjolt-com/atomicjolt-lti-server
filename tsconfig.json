{
	"compilerOptions": {
		"noEmit": false,
		"module": "ESNext",
		"target": "ESNext",
		"lib": [
			"ESNext",
      "dom"
		],
		"outDir": "dist",
		"declarationDir": "types",
		"declaration": true,
		"declarationMap": true,	
		"removeComments": true,
		"esModuleInterop": true,
		"strict": true,
		"alwaysStrict": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"types": [
			"node"
		],
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true,

		// Linter
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
	},
	"include": ["src/**/*", "types.d.ts"],
	"exclude": ["node_modules/**/*", "lti", "test"]
}
